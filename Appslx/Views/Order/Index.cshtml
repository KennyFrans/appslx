
@{
    ViewData["Title"] = "Index";
}
<br />
<div class="row">
    <div class="col-md-12">
        <form action="" id="CreateEditForm" method="post" role="form">
            <div class="form-group">
                <div class="inner-addon right-addon">
                    <i class="glyphicon glyphicon-search"></i>
                    <input id="searchInput" placeholder="search..." autocomplete="off" value="" type="text" class="form-control" name="value">
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-12">
        <table id="myTable"></table>
    </div>
</div>
   

@section Scripts
{
    <script>
        var table;
        $('#CreateEditForm').on("submit",
            function(e) {
                e.preventDefault();
                table.ajax.reload();
            });

        $(document).ready(function() {
            table = $('#myTable').DataTable({
                serverSide: true,
                ajax: {
                    url: '@Url.Action("Get")',
                    type: "POST",
                    data: function(data) {
                        data.input = $("#searchInput").val();
                    }
                },
                columns: [
                    {
                        name: 'id',
                        data: 'id',
                        title: "Id",
                        sortable: false,
                        searchable: false
                    },
                    {
                        name: 'desc',
                        data: 'desc',
                        title: "Description",
                        sortable: false,
                        searchable: false
                    }
                ],
                dom: '<"top">rt<"bottom"lip><"clear">'
            });
        });
    </script>
}

